<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/tools_theme</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="android:textColorTertiary">@color/textTertiaryDark</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:colorBackground">#191919</item>
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>

        <item name="colorControlActivated">@color/tools_theme</item>
        <item name="colorControlNormal">#D5D5D5</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#1ADF825F</item>
        <item name="colorOnPrimary">@color/textPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/textSecondary</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/textTertiary</item>

    </style>
</resources>