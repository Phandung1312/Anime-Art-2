<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="page_title_text">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:fontFamily">@font/kaushan_script_regular</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <style name="medium_title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    <style name="title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="coins_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:background">@drawable/background_coins_button</item>
    </style>
    <style name="size_of_image_cb" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:buttonTint">@null</item>
        <item name="android:background">@drawable/bg_size_of_image_cb</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... các thuộc tính khác ... -->
        <item name="android:navigationBarColor">@color/backgroundDark</item>
    </style>
</resources>