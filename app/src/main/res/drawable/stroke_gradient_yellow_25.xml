<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorSecondary"
                android:type="linear" />
            <corners android:radius="@dimen/_25sdp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:startColor="#F6D9E1"
                android:endColor="#FEE0E2"
                android:type="linear" />
            <corners android:radius="@dimen/_25sdp"/>
        </shape>
    </item>

</layer-list>