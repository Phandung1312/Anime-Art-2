<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorQuaternary"/>
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/colorPrimary"
                android:endColor="@color/colorSecondary"
                android:type="linear" />
            <corners android:radius="@dimen/_30sdp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/backgroundSecondary" />
            <corners android:radius="@dimen/_30sdp"/>
        </shape>
    </item>

</layer-list>