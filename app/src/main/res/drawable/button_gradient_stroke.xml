<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/shadow_yellow"/>
        </shape>
    </item>
    <item android:bottom="@dimen/_2sdp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/dark_yellow"
                android:endColor="@color/yellow"
                android:type="linear" />
            <corners android:radius="@dimen/_30sdp"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/_3sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/background_dark_gray" />
            <corners android:radius="@dimen/_30sdp"/>
        </shape>
    </item>

</layer-list>