<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item >
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/dark_yellow"
                android:endColor="@color/yellow"
                android:type="linear" />
            <corners android:bottomLeftRadius="@dimen/_25sdp"
                android:bottomRightRadius="@dimen/_25sdp"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/background_dark_gray" />
            <corners android:bottomLeftRadius="@dimen/_25sdp"
                android:bottomRightRadius="@dimen/_25sdp"/>
        </shape>
    </item>

</layer-list>