<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/shadow_yellow"/>
        </shape>
    </item>
    <item
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_border"  />
            <corners android:radius="@dimen/_26sdp"/>
        </shape>
    </item>
    <item  android:bottom="3dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="@color/dark_yellow"
                android:endColor="@color/yellow"
                android:type="linear" />
            <corners android:radius="@dimen/_26sdp"/>
        </shape>
    </item>
</layer-list>