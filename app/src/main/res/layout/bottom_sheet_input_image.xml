<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark_gray"
    android:orientation="vertical"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_18ssp"
        android:text="Select high-quality images for uploading."
        android:fontFamily="@font/inter_tight_bold"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Make sure your uploaded images are sharp, not too dark or too bright"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/low_quality"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_140sdp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/high_quality"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_140sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/agree_view"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:cardBackgroundColor="?android:windowBackground"
        app:cardCornerRadius="@dimen/_25sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_gradient_yellow">

            <com.basic.common.widget.LsTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/inter_tight_bold"
                android:text="OK"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_12ssp"
                app:textFont="semi" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>